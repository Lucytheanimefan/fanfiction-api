#!/usr/bin/python
__author__ = 'Samson Danziger'

import getopt
import sys
from ff import Story, download


def main(argv):
    url = ''
    storyid = 0
    output = ''
    messages = True
    ext = 'pdf'
    help_string = """
    ffdownload -h
    ffdownload -u [url] -o [output]
    ffdownload -s [storyid] -o [output]
    """
    try:
        opts, args = getopt.getopt(argv, "hu:o:s:mf:", ["url=", "output=", "storyid=", "messages-off", "format="])
    except getopt.GetoptError:
        print help_string
        sys.exit(2)
    for opt, arg in opts:
        if opt == "-h":
            print help_string
            sys.exit(2)
        elif opt in ("-u", "--url"):
            url = arg
        elif opt in ("-o", "--output"):
            output = arg
        elif opt in ("-s", "--storyid"):
            storyid = int(arg)
        elif opt in ("-m", "--messages-off"):
            messages = False
        elif opt in ("-f", "--format"):
            ext = arg
    if len(url) > 0:
        story = Story(url=url)
    elif storyid != 0:
        story = Story(id=storyid)
    else:
        print "url or storyid not provided"
        print help_string
        return
    download(story, output=output, message=messages, ext=ext)

if __name__ == "__main__":
    main(sys.argv[1:])
